      <main class="main" id="main">
        <div class="sectiond">
          <!-- sstart -->
        <h2 class="dhtitle tdfont">Hi <span class="tsdfont"><%= user.displayName %></span></h2>
        <!-- <img src="<%= user.photo %>" alt="Profile Picture"> -->
        <p class="dpara">Welcome to your Dashboard!</p>

          <section class="home">

            <div class="card profile-card">


              <div class="profile-card-wrapper">

                <figure class="card-avatar">
                  <img src="<%= user.photo %>" alt="<%= user.displayName %>" width="48" height="48">
                </figure>

                <div>
                  <p class="card-title"><%= user.displayName %></p>

                  <p class="card-subtitle"></p>
                </div>

              </div>

              <ul class="contact-list">
                <li>
                  <a href="mailto:<%= user.email %>" class="contact-link icon-box">
                    <span class="material-symbols-rounded icon">mail</span>
                    <p class="text"><%= user.email %></p>
                  </a>
                </li>
                <li>
                  <a href="#" class="contact-link icon-box" onclick="copyApiKey(event)">
                    <span class="material-symbols-rounded icon">key</span>
                    <p class="text"><%= user.apiKey %></p>
                  </a>
                </li>
              </ul>

              <div class="divider card-divider"></div>

              <ul class="progress-list">
                <li class="progress-item">
                  <div class="progress-label">
                    <p class="progress-title">Tokens Usage</p>
                    <data class="progress-data" value="<%= user.tokens %>"><%= Math.min(Math.round(user.tokens / 250 * 100 * 100) / 100, 100).toFixed(2) %>%</data>
                  </div>
                  <div class="progress-bar">
                    <div class="progress" style="--width: <%= Math.min(Math.round(user.tokens / 250 * 100 * 100) / 100, 100).toFixed(2) %>%; --bg: var(--hovered-color);"></div>
                  </div>
                </li>

                <!-- <li class="progress-item">
                  <div class="progress-label">
